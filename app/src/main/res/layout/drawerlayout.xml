<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--主布局-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <GridView
       android:id="@+id/test_gridview"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbarStyle="outsideOverlay"
       android:stretchMode="columnWidth"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:numColumns="2"
       android:verticalSpacing="10dp"
       android:horizontalSpacing="10dp"></GridView>
</LinearLayout>
<!--侧滑菜单-->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_gravity="start">
   <LinearLayout
       android:id="@+id/ln_touxiang"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:background="@mipmap/home_nav_title">
      <widget.CircleImageView
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@mipmap/hugh"
          app:border_width="5dp"
          app:border_color="@color/line"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="xiaoli"/>
   </LinearLayout>
   <LinearLayout
       android:layout_below="@id/ln_touxiang"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/bg">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="30dp"
          android:orientation="vertical"
          android:background="@color/bg"></LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#ff929292"></View>
      <LinearLayout
          android:id="@+id/ln_fenlei"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:background="@drawable/ln_selector"
          android:clickable="true">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_gravity="center_vertical"
             android:src="@mipmap/home_nav_icon01"/>
         <TextView
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="分类练习"
             android:textColor="#ff170101"/>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#ff929292"></View>
      <LinearLayout
          android:id="@+id/ln_chazhao"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:background="@drawable/ln_selector"
          android:clickable="true">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_gravity="center_vertical"
             android:src="@mipmap/home_nav_icon03"/>
         <TextView
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="题目查找"
             android:textColor="#ff170101"/>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#ff929292"></View>
      <LinearLayout
          android:id="@+id/ln_chengjiu"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:background="@drawable/ln_selector"
          android:clickable="true">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_gravity="center_vertical"
             android:src="@mipmap/home_nav_icon04"/>
         <TextView
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="我的成就"
             android:textColor="#ff170101"/>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#ff929292"></View>
      <LinearLayout
          android:id="@+id/ln_shoucang"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:orientation="horizontal"
          android:background="@drawable/ln_selector"
          android:clickable="true">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_gravity="center_vertical"
             android:src="@mipmap/home_nav_icon02"/>
         <TextView
             android:layout_marginLeft="50dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="我的收藏"
             android:textColor="#ff170101"/>
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#ff929292"></View>
   </LinearLayout>


   <TextView
       android:id="@+id/tv_shezhi"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:drawableLeft="@mipmap/ic_settings_grey600_18dp"

       android:layout_marginLeft="10dp"
       android:layout_marginBottom="30dp"
       android:layout_alignParentBottom="true"
       android:text="设置"
       android:textColor="#ff170101"/>
   <TextView
       android:id="@+id/tv_tuichu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="退出"
       android:textColor="#ff170101"
       android:drawableRight="@mipmap/ic_exit_to_app_grey600_18dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:layout_marginRight="20dp"
       android:layout_marginBottom="30dp"/>

</RelativeLayout>
</android.support.v4.widget.DrawerLayout>

